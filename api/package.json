{
  "name": "@open-camping-api/api",
  "version": "0.0.1",
  "description": "Open Camping REST API",
  "repository": "https://github.com/mi-kas/open-camping-api.git",
  "author": "Michael Kaserer <mi.kaserer@gmail.com>",
  "license": "MIT",
  "main": "src/server.ts",
  "scripts": {
    "tsc": "tsc -p . --noEmit",
    "start": "ts-node-dev --transpile-only --no-notify src/server.ts",
    "prebuild": "rimraf build",
    "build": "tsc",
    "postbuild": "cp src/api.yaml build/api.yaml",
    "test": "echo 'No tests defined yet'",
    "test:load": "artillery run src/loadtest.yaml",
    "lint": "eslint --ext ts src",
    "generate": "openapi-typescript src/api.yaml --output src/types/api.ts"
  },
  "dependencies": {
    "@open-camping-api/commons": "*",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.11",
    "helmet": "^4.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/node": "^15.6.1",
    "@typescript-eslint/parser": "^4.26.0",
    "artillery": "^1.7.2",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "openapi-typescript": "^3.3.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.3.2"
  }
}
