{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "incremental": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules"]
}
